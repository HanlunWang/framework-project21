<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="skill">
    <resultMap id="rmSkill" type="ca.bytetube.bean.Skill">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="level" column="level"></result>
        <result property="createdTime" column="created_time"></result>
    </resultMap>


    <select id="list" resultType="ca.bytetube.bean.Skill">
        select * from skill
    </select>

    <select id="selectById" resultMap="rmSkill" parameterType="int">
        select * from skill where id = #{id}
    </select>


    <select id="list2" resultMap="rmSkill" parameterType="Map">
        select * from skill where id > #{id} OR level > #{level}
    </select>
</mapper>